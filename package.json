{
    "name": "laravel",
    "private": true,
    "scripts": {
        "prepare": "husky install 2>/dev/null || true",
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "fix": "run-p fix:*",
        "fix:css": "stylelint --fix 'resources/css/**/*'",
        "fix:php": "php-cs-fixer fix --config ./.php-cs-fixer.dist.php --path-mode=intersection --",
        "fix:js": "prettier --write '**/*.js'",
        "fix:blade": "blade-formatter --w resources/views/**/*.blade.php --wrap 9999 -i 2"
    },
    "devDependencies": {
        "@hkdobrev/run-if-changed": "^0.3.1",
        "axios": "^0.21",
        "blade-formatter": "^1.13.0",
        "browser-sync": "^2.27.7",
        "browser-sync-webpack-plugin": "^2.3.0",
        "husky": "^7.0",
        "laravel-mix": "^6.0.6",
        "lint-staged": "^11.2.6",
        "lodash": "^4.17.19",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.1.14",
        "prettier": "^2.4.1",
        "resolve-url-loader": "^4.0.0",
        "sass": "^1.35.1",
        "sass-loader": "^12.1.0",
        "stylelint": "^14.1.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-recommended-scss": "^5.0.1",
        "stylelint-config-standard": "^24.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-prettier": "^2.0.0",
        "stylelint-scss": "^4.0.0"
    },
    "lint-staged": {
        "app/**/*.php": "npm run fix:php",
        "tests/**/*.php": "npm run fix:php",
        "resources/css/**/*.scss": "stylelint --fix",
        "resources/views/**/*.blade.php": "blade-formatter --w --wrap 9999 -i 2"
    },
    "run-if-changed": {
        "package-lock.json": "npm install --prefer-offline --no-audit",
        "composer.lock": "composer install",
        "resources/@(css|js)/**.*": "npm run dev"
    }
}
